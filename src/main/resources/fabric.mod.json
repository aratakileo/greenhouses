{
  "schemaVersion": 1,
  "id": "greenhouses",
  "version": "${version}",
  "name": "Arataki's greenhouses",
  "description": "This mod adds a new block, using which you can unload the routine of extracting items of plant origin, because now the greenhouse block will do it for you",
  "authors": [
    "Arataki Leo"
  ],
  "contact": {
    "homepage": "https://modrinth.com/greenhouses",
    "sources": "https://github.com/aratakileo/greenhouses",
    "issues": "https://github.com/aratakileo/greenhouses/issues"
  },

  "license": "GPL-3.0",
  "icon": "assets/greenhouses/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.aratakileo.greenhouses.Greenhouses"
    ],
    "rei_client": [
      "io.github.aratakileo.greenhouses.gui.rei.GreenhousesReiClientPlugin"
    ]
  },
  "mixins": [
    "greenhouses.mixins.json"
  ],
  "depends": {
    "fabricloader": "*",
    "elegantia": "=0.0.1",
    "minecraft": ">=${minecraft_version}"
  }
}
